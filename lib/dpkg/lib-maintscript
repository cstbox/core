stop_service() {
    svc=$1
    [ -n "$svc" ] ||Â return

    if [ -f $CSTBOX_VAR_RUN/$svc.pid ] ; then
        service $svc stop
    fi
}

# remove all pyc files created for the package Python modules
cleanup_pyc() {
    grep -e "\.py$" /var/lib/dpkg/info/${DPKG_MAINTSCRIPT_PACKAGE}.list | sed 's/$/c/' | while read fpath ; do
        rm -f $fpath
    done
}
